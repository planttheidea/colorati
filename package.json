{
  "author": "tony.quetano@planttheidea.com",
  "browser": "dist/umd/index.js",
  "bugs": {
    "url": "https://github.com/planttheidea/colorati/issues"
  },
  "dependencies": {
    "@vitest/coverage-v8": "^4.0.9",
    "hash-it": "^7.0.0-beta.0"
  },
  "description": "Transform any value into a consistent color",
  "devDependencies": {
    "@planttheidea/build-tools": "^1.0.0-beta.27",
    "rollup": "^4.53.2",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "default": {
        "types": "./dist/umd/index.d.ts",
        "default": "./dist/umd/index.js"
      }
    }
  },
  "homepage": "https://github.com/planttheidea/colorati#readme",
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.mjs",
  "name": "colorati",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planttheidea/colorati.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:es && npm run build:es:types && npm run build:cjs && npm run build:cjs:types && npm run build:umd && npm run build:umd:types",
    "build:cjs": "NODE_ENV=production rollup -c config/rollup/cjs.config.js",
    "build:cjs:types": "tsc -p config/types/cjs.declaration.json && pti-module-types -t cjs",
    "build:es": "NODE_ENV=production rollup -c config/rollup/es.config.js",
    "build:es:types": "tsc -p config/types/es.declaration.json && pti-module-types -t es",
    "build:umd": "NODE_ENV=production rollup -c config/rollup/umd.config.js",
    "build:umd:types": "tsc -p config/types/umd.declaration.json",
    "clean": "rm -rf dist",
    "clean:cjs": "rm -rf dist/cjs",
    "clean:es": "rm -rf dist/es",
    "clean:umd": "rm -rf dist/umd",
    "lint": "echo \"TODO LINT\"",
    "release": "release-it --config=config/release-it/stable.json",
    "release:alpha": "release-it --config=config/release-it/alpha.json",
    "release:beta": "release-it --config=config/release-it/beta.json",
    "release:rc": "release-it --config=config/release-it/rc.json",
    "release:scripts": "npm run typecheck && npm run lint && npm run test && npm run build",
    "test": "echo \"TODO TEST\"",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "types": "index.d.ts",
  "version": "0.0.0"
}
