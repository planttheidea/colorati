{
  "author": "tony.quetano@planttheidea.com",
  "browser": "dist/umd/index.js",
  "bugs": {
    "url": "https://github.com/planttheidea/colorati/issues"
  },
  "description": "Transform any value into a consistent color",
  "devDependencies": {
    "@planttheidea/build-tools": "^1.0.0-beta.13",
    "rollup": "^4.53.2",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/types/index.d.mts",
        "default": "./dist/es/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      },
      "default": {
        "types": "./dist/umd/types/index.d.ts",
        "default": "./dist/umd/index.js"
      }
    }
  },
  "homepage": "https://github.com/planttheidea/colorati#readme",
  "license": "MIT",
  "main": "dist/cjs/index.cjs",
  "module": "dist/es/index.mjs",
  "name": "colorati",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/planttheidea/colorati.git"
  },
  "scripts": {
    "build": "npm run build:es && npm run build:cjs && npm run build:umd",
    "build:cjs": "NODE_ENV=production rollup -c build/rollup/cjs.config.js && tsc -p build/types/cjs.declaration.json && pti-module-types -t cjs",
    "build:es": "NODE_ENV=production rollup -c build/rollup/es.config.js && tsc -p build/types/es.declaration.json && pti-module-types -t es",
    "build:umd": "NODE_ENV=production rollup -c build/rollup/umd.config.js && tsc -p build/types/umd.declaration.json",
    "clean": "rm -rf dist",
    "clean:cjs": "rm -rf dist/cjs",
    "clean:es": "rm -rf dist/es",
    "clean:umd": "rm -rf dist/umd",
    "dist": "npm run clean && npm run build",
    "test": "vitest run"
  },
  "type": "module",
  "types": "index.d.ts",
  "version": "0.0.0",
  "dependencies": {
    "hash-it": "^7.0.0-beta.0"
  }
}
